@model EntityLayer.Concrete.Image
@{
    ViewBag.Title = "AddImage";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}
<h2>Fotoğraf Ekleme Sayfası</h2>
<br />
<br />
@using (Html.BeginForm("AddImage", "Gallery", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.Label("Fotoğraf Başlığı Giriniz")
        @Html.TextBoxFor(x => x.ImageName, new { @class = "form-control" })

        <br /><br />
        @Html.Label("Fotoğraf Yükleyiniz.")
        <br />
        <input type="file" name="ImagePath" class="btn btn-primary"/>
        <br /><br />

        <button class="btn btn-info">Fotoğraf Ekle</button>
    </div>
}